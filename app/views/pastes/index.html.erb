<% content_for(:title, 'Recent pastes') %>

<ol class="breadcrumb mb-4">
  <li class="breadcrumb-item"><%= link_to 'Home', root_path %></li>
  <li class="breadcrumb-item active">Pastes</li>
</ol>

<h1>Recent pastes</h1>

<table class="table mt-3">
  <thead class="thead-default">
    <tr>
      <th>Paste</th>
      <th>Creation</th>
      <th>Expiration</th>
    </tr>
  </thead>
  <tbody>
    <% @pastes.each do |paste| %>
      <tr class="<%= paste.encrypted ? 'table-warning' : '' %>">
        <th scope="row"><%= link_to(paste.token, paste) %></th>
        <td><%= distance_of_time_in_words(paste.created_at, Time.zone.now) %></td>
        <td><%= distance_of_time_in_words(Time.zone.now, paste.expired_at) %></td>
      </tr>
    <% end %>
  </tbody>
<table>
</ul>

<div class="text-center mt-3">
  <div class="btn-group" role="group">
    <%= link_to 'New Paste', root_path, class: 'btn btn-primary', role: 'button' %>
  </div>
</div>
